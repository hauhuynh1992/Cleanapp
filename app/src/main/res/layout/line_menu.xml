<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:paddingBottom="@dimen/textsize_10dp"
    android:paddingTop="@dimen/textsize_10dp">

    <TextView
        android:id="@+id/txt_code_of_conduct_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/clanot_book"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_18sp" />

    <TextView
        android:id="@+id/txt_code_of_conduct_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_code_of_conduct_title"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txt_code_of_conduct_title"
        android:fontFamily="@font/clanot_book"
        android:gravity="right"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textsize_14sp" />
</RelativeLayout>
