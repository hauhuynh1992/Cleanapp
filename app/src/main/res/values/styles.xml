<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="DashboardTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="ToolbarColoredBackArrowBlack" parent="AppTheme">
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="CustomEdittextWhile" >
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
    </style>

    <style name="CustomEdittextBlack">
        <item name="colorAccent">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

    <style name="DrawerArrowStyle">
        <item name="color">#ffffff</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="DialogThemeFromBottomToCenter">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_top</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Translucent">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
    </style>


    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorbackground</item>
    </style>

    <style name="JobEnRouteTitle">
        <item name="android:paddingTop">@dimen/textsize_10sp</item>
        <item name="android:paddingBottom">@dimen/textsize_10sp</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_marginLeft">@dimen/textsize_10sp</item>
    </style>

    <style name="JobEnRouteContent">
        <item name="android:paddingBottom">@dimen/textsize_20sp</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">@dimen/textsize_10sp</item>
        <item name="android:layout_marginRight">@dimen/textsize_10sp</item>
    </style>

    <style name="DashboardDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TabMenu" parent="Theme.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/textsize_5dp</item>
        <item name="android:paddingBottom">@dimen/textsize_5dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
